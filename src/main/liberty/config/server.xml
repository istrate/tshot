<?xml version="1.0" encoding="UTF-8"?>
<server description="MongoDB Troubleshooting Server">

    <!-- Enable features -->
    <featureManager>
        <feature>servlet-5.0</feature>
        <feature>jsonp-2.0</feature>
        <feature>cdi-3.0</feature>
        <feature>jaxrs-3.0</feature>
        <feature>mpHealth-4.0</feature>
        <feature>mpMetrics-4.0</feature>
    </featureManager>

    <!-- HTTP Endpoint -->
    <httpEndpoint id="defaultHttpEndpoint"
                  httpPort="9080"
                  httpsPort="9443"
                  host="*" />

    <!-- Automatically expand WAR files and EAR files -->
    <applicationManager autoExpand="true"/>

    <!-- Web Application -->
    <webApplication id="mongo-troubleshoot" 
                    location="mongo-troubleshoot.war" 
                    contextRoot="/">
        <classloader delegation="parentLast" />
    </webApplication>

    <!-- Logging Configuration -->
    <!-- Ensure all logs go to console for pod visibility in plain text format -->
    <logging traceSpecification="*=info:com.ibm.mas.tshot.*=all"
             maxFileSize="20"
             maxFiles="10"
             consoleLogLevel="INFO"
             consoleFormat="simple"
             consoleSource="message,trace,accessLog,ffdc,audit"
             messageFormat="simple"
             messageSource="message,trace,accessLog,ffdc,audit" />

    <!-- Access Logging -->
    <httpAccessLogging id="accessLogging">
        <accessLogging 
            logFormat='%h %u %t "%r" %s %b "%{Referer}i" "%{User-Agent}i"' />
    </httpAccessLogging>

    <!-- Health Check -->
    <mpMetrics authentication="false" />

    <!-- CORS Configuration for development -->
    <cors domain="/"
          allowedOrigins="*"
          allowedMethods="GET, POST, PUT, DELETE, OPTIONS"
          allowedHeaders="*"
          allowCredentials="true"
          maxAge="3600" />

</server>